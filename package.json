{
	"name": "settings-presets",
	"displayName": "Settings Presets",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onView:settings-presets",
		"*"
	],
	"contributes": {
		"configuration": [
			{
				"id": "settingsPresets",
				"title": "Settings Preset",
				"properties": {
					"settingsPresets.settings": {
						"type": "object"
					}
				}
			}
		],
		"commands": [
			{
				"command": "settingsPresets.addPreset",
				"title": "Add Settings Preset",
				"shortTitle": "Add Preset",
				"icon": {
					"dark": "media/add_dark.svg",
					"light": "media/add_light.svg"
				}
			},
			{
				"command": "settingsPresets.delectPreset",
				"title": "Remove Settings Preset",
				"shortTitle": "Remove Preset"
			},
			{
				"command": "settingsPresets.applyPreset",
				"title": "Apply Settings Preset",
				"shortTitle": "Apply Preset"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "settings-presets",
					"title": "Settings Presets",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"settings-presets": [
				{
					"id": "settingsPresets",
					"name": "Settings Presets"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "settingsPresets.addPreset",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "settingsPresets.applyPreset"
				},
				{
					"command": "settingsPresets.delectPreset"
				}
			]
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
