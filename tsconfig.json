{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2020",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"module": "commonjs",
		"rootDir": "src",
		"outDir": "out",
		"sourceMap": true,

		"lib": [
			"ES2020"
		],
	}
}
